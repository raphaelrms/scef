<div id="edit-categoria-<%= categoria.id %>" aria-hidden="true" role="dialog" aria-labelledby="meuModal_<%= categoria.id %>" class="modal" style="display: none;">
  <%= simple_form_for categoria, :url => categoria_path(categoria), :html => {:method => :put, :class => 'form-horizontal' } do |f| %>
    <div class="modal-dialog">
    <div class="modal-content">
    <div class="modal-header">
      <a class="close" data-dismiss="modal">&#215;</a>
      <h3 class="modal-title" id="meuModal_<%= categoria.id %>">Editar Categoria</h3>
    </div>
    <div class="modal-body">
      <div class="form-group">
        <%= f.label :descricao, "Descrição:",:class => "col-xs-6 col-sm-3 col-md-2 control-label" %>
        <div class="col-sm-9">
          <%= f.text_field :descricao, :class => "form-control","data-validate" => "validate(required)", :autofocus => true,:title => "Descrição",:placeholder => "Insira a nova descrição", :value => categoria.descricao%>
        </div>
      </div>
    </div>
    <div class="modal-footer">
      <%= f.submit "Alterar", :class => "btn" %>
      <a class="btn" data-dismiss="modal" href="#">Fechar</a>
    </div>
  <% end %>
</div>
</div>
</div>

<script type="text/javascript">
    $( document ).ready(function() {
        $('#edit-categoria-<%= categoria.id %>').ketchup();
    });
</script>
