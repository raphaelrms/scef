# encoding: utf-8
<div id="edit-categoria-<%= categoria.id %>" aria-hidden="true" role="dialog" aria-labelledby="meuModal_<%= categoria.id %>" class="modal" style="display: none;">
  <%= form_for categoria, :url => categoria_path(categoria), :html => {:method => :put, :class => 'form-horizontal' } do |f| %>
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <a class="close" data-dismiss="modal">&#215;</a>
            <h3 class="modal-title" id="meuModal_<%= categoria.id %>">Editar Categoria</h3>
          </div>
          <div class="modal-body">
            <%= form_for categoria, :html => {:class => 'form-horizontal' } do |f| %>
                <%= render :partial => 'form',:locals => { :f => f, :role => @role } %>
            <% end %>
            <div class="modal-footer">
              <a class="btn" data-dismiss="modal" href="#">Fechar</a>
              <%= f.submit "Alterar", :class => "btn" %>

            </div>
  <% end %>
  </div>
  </div>
  </div>

  <script type="text/javascript">
      $( document ).ready(function() {
          $('#edit-categoria-<%= categoria.id %>').ketchup();
          $('.modal').on('hidden.bs.modal', function () {
              $(".ketchup-error").hide();
          })
      });

  </script>
