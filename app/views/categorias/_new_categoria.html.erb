<div id="new-categoria" aria-hidden="true" role="dialog" aria-labelledby="meuModal" class="modal" style="display: none;">
  <%= simple_form_for (new_categoria_path) do |f| %>
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <a class="close" data-dismiss="modal">&#215;</a>
            <h3 class="modal-title" id="meuModal">Nova Categoria</h3>
          </div>
          <div class="modal-body">
            <div class="form-group">
              <%= f.label :descricao, "Descrição:",:class => "col-xs-6 col-sm-3 col-md-2 control-label" %>
              <div class="col-sm-9">
                <%= f.text_field :descricao, :class => "form-control","data-validate" => "validate(required)",:title => "Descrição",:placeholder => "Insira a descrição"%>
              </div>
            </div>
          </div>
          <div class="modal-footer">
            <%= f.submit "Salvar", :class => "btn btn-primary" %>
            <a class="btn" data-dismiss="modal" href="#">Fechar</a>
          </div>
        </div>
      </div>
  <% end %>
</div>

<script type="text/javascript">
    $( document ).ready(function() {
        $('#new-categoria').ketchup();
    });
</script>