# encoding: utf-8
<%= tinymce%>
<ol class="breadcrumb">
  <li><a href="<%= root_path%>">Principal</a></li>
  <li><%= link_to "Notícias", noticias_path%></li>
  <li>Nova notícia</li>
</ol>
<%= painel_titulo("Cadastro de Notícia").html_safe %>
<div class="panel-body">

  <div class="row">
    <div class="col-md-10"> <%= exibe_erros(@noticia).html_safe if @noticia.errors.any?%></div>
  </div>
  <p>
  <%= form_for @noticia, :html => {:class => 'form-horizontal' } do |f| %>

     <%= render :partial => 'form',:locals => { :f => f, :role => @role } %>

      <div class="form-group">
        <div class="col-sm-2 col-md-offset-3">
          <%= f.submit 'Cadastrar', :class => 'btn-primary' %>
        </div>
      </div>
  <% end %>
</div>
</fieldset>