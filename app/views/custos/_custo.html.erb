# encoding: utf-8
<div id="edit-custo-<%= custo.id %>" aria-hidden="true" role="dialog" aria-labelledby="meuModal_<%= custo.id %>" class="modal" style="display: none;">
  <%= form_for custo, :url => custo_path(custo), :html => {:method => :put, :class => 'form-horizontal' } do |f| %>
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <a class="close" data-dismiss="modal">&#215;</a>
            <h3 class="modal-title" id="meuModal_<%= custo.id %>">Editar custo</h3>
          </div>
          <div class="modal-body">
            <%= form_for custo, :html => {:class => 'form-horizontal' } do |f| %>
                <%= render :partial => 'form',:locals => { :f => f, :role => @role } %>
                <div class="modal-footer">
                  <%= f.submit "Alterar", :class => "btn" %>
                  <a class="btn" data-dismiss="modal" href="#">Fechar</a>
                </div>
            <% end %>


  <% end %>
  </div>
  </div>
  </div>
  </div>

  <script type="text/javascript">
      $( document ).ready(function() {
          $('#edit-custo-<%= custo.id %>').ketchup();
          $('#edit-custo-<%= custo.id %>').on('hidden.bs.modal', function () {
              $(".ketchup-error").hide();
          })
      });

  </script>
