# encoding: utf-8
<ol class="breadcrumb">
  <li><a href="<%= root_path%>">Principal</a></li>
  <li><%= link_to "Custos", custos_path%></li>
  <li>Novo custo</li>
</ol>
<%= painel_titulo("Cadastro de Custos").html_safe %>
<div class="panel-body">

  <div class="row">
    <div class="col-md-10"> <%= exibe_erros(@custo).html_safe if @custo.errors.any?%></div>
  </div>
  <p>
    <%= form_for @custo, :html => {:class => 'form-horizontal' } do |f| %>

        <%= render :partial => 'form',:locals => { :f => f, :role => @role } %>

      <div class="form-group">
        <div class="col-sm-2 col-md-offset-3">
          <%= f.submit 'Cadastrar', :class => 'btn-primary' %>
        </div>
      </div>
  <% end %>


</div>
</div>

<script type="text/javascript">
    $( document ).ready(function() {
        $('#new_custo').ketchup();
    });

    $("#custo_valor").priceFormat({
        prefix: "R$ ",
        centsSeparator: ",",
        thousandsSeparator: "." ,
        clearPrefix: true
    });
</script>